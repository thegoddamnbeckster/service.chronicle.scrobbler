<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings version="2">

  <!-- ── Connection ─────────────────────────────────────────────────────────── -->
  <section id="connection">

    <category id="connection" label="32001">
      <group id="1" label="32001">

        <setting id="chronicle_url" type="string" label="32002" default="http://localhost:8080">
          <control type="edit" format="string"/>
          <constraints>
            <allowempty>false</allowempty>
          </constraints>
        </setting>

        <setting id="api_key" type="string" label="32003" default="" secure="true">
          <control type="edit" format="string"/>
        </setting>

      </group>
    </category>

    <!-- ── Scrobbling ─────────────────────────────────────────────────────── -->
    <category id="scrobbling" label="32004">

      <group id="2" label="32005">

        <setting id="watched_threshold" type="integer" label="32006" default="80">
          <range start="50" step="5" end="100"/>
          <control type="slider" format="integer"/>
        </setting>

        <setting id="poll_interval" type="integer" label="32007" default="30">
          <range start="15" step="5" end="120"/>
          <control type="slider" format="integer"/>
        </setting>

      </group>

      <group id="3" label="32008">

        <setting id="scrobble_movies" type="boolean" label="32009" default="true">
          <control type="toggle"/>
        </setting>

        <setting id="scrobble_tv" type="boolean" label="32015" default="true">
          <control type="toggle"/>
        </setting>

        <setting id="scrobble_music" type="boolean" label="32016" default="false">
          <control type="toggle"/>
        </setting>

      </group>

    </category>

  </section>

</settings>
